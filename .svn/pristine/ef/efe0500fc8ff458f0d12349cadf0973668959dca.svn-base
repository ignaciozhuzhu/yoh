<!DOCTYPE HTML>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="../css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="../css/fileInput/default.css">
    <link href="../css/fileInput/fileinput.css" media="all" rel="stylesheet" type="text/css" /> 
    
    <link rel="stylesheet" type="text/css" media="all" href="../css/daterangepicker-bs3.css" />
    <link href="../css/main.css" rel="stylesheet" /> 
    <link href="../img/favicon.ico" type="image/x-icon" rel="shortcut icon">

    <title>添加职位</title>
</head>

<body>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top" id="topMainBox">
    </nav>

    <!-- Begin page content -->
    <div class="container content-middle">
        <div class="row">
            <div class="col-sm-3" id="leftMainBox">
            </div>

            <div class="col-sm-9" id="loading_end">
            <div id="top_area"></div>
                <!-- <div class="bmargin1">
                    <div>
                        <div class="btn-group pull-right " role="group" aria-label="...">
                            <button type="button" class="btn btn-primary ddbg-color border-ddd" id="addJob">确定</button>
                        </div>
                        <div class="page-title">添加职位</div>
                    </div>
                </div> -->

                <!-- Table -->
                <div class="panel panel-default no-border">
                    <form name="addDocForm" action="" enctype="multipart/form-data" method="post" id="formid" >
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" id="title" placeholder="职位标题"/>
                        </div>
                        <div class="form-group">
                           <div>诊所图片</div>
                            <input id="ygMulFiles" name="ygMulFiles" class="file" type="file" multiple data-min-file-count="1" placeholder="诊所图片上传"/>
                        </div>
                        <div class="form-group">
                            <label class="radio-inline">
                              <input type="radio" name="mode" id="mode1" value="1" checked="checked"/> 日租
                            </label>
                            <label class="radio-inline">
                              <input type="radio" name="mode" id="mode2" value="2"/> 收入提成
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="price" id="price" placeholder="出租价格"/>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" rows="5" placeholder="招聘要求" id="jobtitle" name="jobtitle"></textarea>
                        </div>
                        <div class="form-group">
                            <label class="radio-inline">
                              <input type="radio" name="d" id="d1" value="0" checked="checked"/> 启用
                            </label>
                            <label class="radio-inline">
                              <input type="radio" name="d" id="d2" value="1" /> 未启用
                            </label>
                        </div>
                    </form>
                </div>
        </div>
    </div>

    <div class="container" id="loading">
        <div class="loading_box">
            <div class="spinner">
              <div class="spinner-container container1">
                <div class="circle1"></div>
                <div class="circle2"></div>
                <div class="circle3"></div>
                <div class="circle4"></div>
              </div>
              <div class="spinner-container container2">
                <div class="circle1"></div>
                <div class="circle2"></div>
                <div class="circle3"></div>
                <div class="circle4"></div>
              </div>
              <div class="spinner-container container3">
                <div class="circle1"></div>
                <div class="circle2"></div>
                <div class="circle3"></div>
                <div class="circle4"></div>
              </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <script src="../js/lib/jq-sh-bt.js " ></script>
        <script src="../js/lib/fileInputJS/fileinput.js" type="text/javascript"></script>
        <script src="../js/lib/fileInputJS//fileinput_locale_zh.js" type="text/javascript"></script>
        <script src="../js/lib/jquery.form.js"></script>
        <script src="../js/dd_addjob.js" ></script>
    </footer>

</body>

</html>